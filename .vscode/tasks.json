{
	"version": "0.1.0",
	"tasks": [
		{
			"taskName": "build",
			"command": "npm",
			"isShellCommand": true,
			"args": ["run", "compile"],
			"showOutput": "always",
			"isBuildCommand": true
		},
		{
			"taskName": "test",
			"showOutput": "always",
			"isTestCommand": true
		},
		{
			"taskName": "tslint",
			"command": "gulp",
			"isShellCommand": true,
			"args": ["tslint"],
			"problemMatcher": {
				"owner": "tslint",
				"fileLocation": [
					"relative",
					"${workspaceRoot}"
				],
				"severity": "warning",
				"pattern": {
					"regexp": "^\\[tslint\\] (.*):(\\d+):(\\d+):\\s+(.*)$",
					"file": 1,
					"line": 2,
					"column": 3,
					"message": 4
				}
			}
		}
	]
}